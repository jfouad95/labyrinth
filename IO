#include<stdio.h>
//#include<QPainter>
#include<windows.h>
#include<process.h>
#include<dos.h>
#include<conio.h>
#include<iostream>
void main()
{
	int i=250, j=250, x=0, y=-1, ch, gd=DETECT, gm;
    initgraph(&gd,&gm,”C:\\TC\\BGI”);

    while(1) { //infinite loop
//    	drawPoint(i,j);
    	circle(i,j,10);
        if(kbhit()) { //check if a key is pressed
        	ch=getch();
            if(ch==65) { //move up
            	x=0;
                y=-1;
            }
            if(ch==67) { //move left
            	x=-1;
                y=0;
            }
            if(ch==68) { //move right
            	x=1;
                y=0;
            }
            if(ch==66) { //move down
            	x=0;
            	y=1;
            }
            if(ch==27) { //exit when esc pressed
            	exit(0);
            }

            i=i+x;
            j=j+y;

            delay(50);
            cleardevice();
        }
    }
}
